server {

    listen  80;
    listen [::]:80;
    server_name localhost *.ngrok.io;
    charset utf-8;

    client_max_body_size    4M;

    error_page 400 /400.html;
    location = /400.html {
                alias <path>/templates;
                internal;
    }
    error_page 401 /401.html;
    location = /401.html {
                alias <path>/templates;
                internal;
    }
    error_page 403 /403.html;
    location = /403.html {
                alias <path>/templates;
                internal;
    }
    error_page 404 /404.html;
    location = /404.html {
                alias <path>/templates;
                internal;
    }

    error_page 500 /500.html;
    location = /500.html {
                alias <path>/templates;
                internal;
    }

    location /media {
        alias <path>/media;
    }

    location /static {
        alias <path>/static;
    }

    location / {
        proxy_pass "http://127.0.0.1:8000";
    }
}